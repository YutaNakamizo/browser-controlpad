{
  "manifest_version": 2,
  
  "name": "Browser Gamepad Controller",
  "short_name": "controlpad",

  "version": "0.0.0.1",

  "browser_action": {
    "default_title": "Control",
    "default_popup": "popup/index.html"
  },

  "content_scripts":[
    {
      "matches": ["https://docs.google.com/presentation/d/*"],
      "js": ["pagescript.js"]
    }
  ],

  "permissions": [
    "storage"
  ]
}
