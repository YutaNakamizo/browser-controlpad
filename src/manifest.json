{
  "manifest_version": 2,
  
  "name": "Browser Gamepad Controller",
  "short-name": "controlpad",

  "version": "0.0.0.1",

  "browser_action": {
    "default_title": "Control",
    "default_popup": "popup.html"
  },

  "content_scripts":[
    {
      "matches": ["*"],
      "js": ["pagescript.js"]
    }
  ]
}
